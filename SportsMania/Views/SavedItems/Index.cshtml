@model IEnumerable<SportsMania.Models.SavedItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
}

<h2>Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var base64 = Convert.ToBase64String(item.Product.Image);
    var imgsrc = string.Format("data:image/+productImage.jpg;base64,{0}", base64);

    <tr>
        <td>
            <img src='@imgsrc' style="max-height:20%;max-width:43.33%;" class="img-responsive" />
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
